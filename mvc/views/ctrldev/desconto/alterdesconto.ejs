<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alterar Desconto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<style>
    #tamanho {
        max-width: 80% !important;
        min-height: 80vh;
        margin-left: 10%;
        padding-top: 30px;
    }
</style>
<body>
    
    <main id="tamanho">
        <section id="altercoins">
            <h2>Alterar Descontos</h2>
            <form id="enviarAtualizacao">
                <input aria-hidden="true" type="hidden" name="id" id="id" value="<%= r.id %>">
                <div class="row">
                    <div class="col">
                        <label for="value" class="form-label">Valor</label>
                        <input type="text" value="<%= r.value %>" name="valor" id="valor" class="form-control" tabindex="2">
                    </div>
                </div> 
                <div class="row">
                    <div class="col">
                        <div class="row"> <input type="submit" value="Alterar" name="btalter" id="btalter"
                                class="btn btn-warning mt-4" tabindex="6"></div>
                    </div>
                </div>               
            </form>
        </section>
    </main>
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
 
    <script>
 
     document.getElementById("enviarAtualizacao").addEventListener("submit", (e) => {
        e.preventDefault()
        enviar()
     })
 
     async function enviar(){        
     
       const id = document.getElementById("id").value
       const valor = document.getElementById("valor").value
       
       const data = {
        "valor":valor,
        "id":id
       }
       const dados = await fetch('/desconto/'+id, {
            method: 'PUT',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
 
 
        const json = await dados.json()
        let desconto = await json  
       
        alert(desconto.msg)
     }
     
 
 
    </script>
 
</body>
</html>